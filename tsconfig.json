{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES6"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
